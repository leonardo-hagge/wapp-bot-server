{
    "compilerOptions": {
        "target": "ES2018",
        "lib": [
            "es5",
            "es6",
            "ES2018"
        ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowJs": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/types",
    ],
    "ts-node": {
        "files": true,
    }
}